generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String
  events Event[]

}


model Event {
  id String @id @default(cuid())
  title String
  imageUrl String
  date DateTime
  location String
  description String
  userId String 
  user User @relation(fields: [userId], references: [id])
  participants Participant[]
}

model Participant {
  id String @id @default(cuid())
  name String
  email String @unique
  eventId String
  event Event @relation(fields: [eventId], references: [id])
}